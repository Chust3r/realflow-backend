{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"baseUrl": "./",
		"paths": {
			"~/*": ["app/*"],
			"~lib/*": ["lib/*"],
			"~db": ["lib/db.ts"]
		}
	}
}
